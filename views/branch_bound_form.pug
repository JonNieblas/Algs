extends layout

block content
  script(src="javascripts/addFields.js")
  div(class="details")
    h1= "BRANCH & BOUND"
    p
    | A dynamic algorithm that aligns two given strings
    | in the most efficient way possible.
    p

    form(method='POST' action='')
      div.form-group
        label(for='capacity') #{'Max Capacity: '}
        input#capacity.form-control(type='text' placeholder='15' name='capacity' value=(undefined===capacity ? '' : capacity))
      br
      label(for='item') #{'Number of Items: '}
      input#item.form-control(type='text' placeholder='4' name='item' value=(undefined===item ? '' : item))
      br
      a(href="#", id="filldetails", onclick="add_fields()") Add Items
      div(id="item-container")
      br
      button.btn.btn-primary(type='submit') CALCULATE

    if errors
      ul.a
        for error in errors
          li.a!= error.msg
          br
